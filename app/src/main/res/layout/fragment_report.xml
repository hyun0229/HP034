<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#006FFD"
    tools:context=".ReportFragment">
    <LinearLayout
        android:id="@+id/rectangle_4"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_back_report"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_back"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_background_top"
        android:orientation="vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="10dp"
            android:text="⦁ 제보내역"
            android:textColor="#006FFD"
            android:textSize="25sp"
            android:fontFamily="@font/omt" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:background="@drawable/report_round"
            android:padding="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"

                android:padding="10dp">

                <TextView
                    android:fontFamily="@font/elicedigitalbaeum_bold"
                    android:textStyle="bold"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:text="날짜"
                    android:textSize="20sp"
                    android:id="@+id/rdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:background="@color/white"
                        android:id="@+id/rcontent"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:fontFamily="@font/elicedigitalbaeum_regular"
                        android:textStyle="bold"
                        android:text="내용"
                        android:textSize="15dp" />

                    <ImageView
                        android:background="@color/white"
                        android:id="@+id/riamge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
